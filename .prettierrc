{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte"],
	"pluginSearchDirs": ["."],
	"semi": false,
	"htmlWhitespaceSensitivity": "css",
	"bracketSameLine": true,
	"arrowParens": "avoid",
	"overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }]
}
