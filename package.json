{
  "name": "krb-svelte",
  "version": "3.0.0-alpha.0",
  "scripts": {
    "dev": "svelte-kit dev --host",
    "build": "svelte-kit build",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 120
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "svelte3"
    ],
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ],
    "settings": {
      "svelte3/missing-declaration": "off"
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "browser": true,
      "es2017": true,
      "node": true
    }
  },
  "devDependencies": {
    "@originjs/vite-plugin-content": "^1.0.1",
    "@sveltejs/adapter-static": "^1.0.0-next.29",
    "@sveltejs/kit": "next",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "sass": "^1.50.0",
    "svelte": "^3.47.0",
    "svelte-preprocess": "^4.10.5",
    "vite-plugin-autoimport": "^1.4.3",
    "vite-plugin-markdown": "^2.0.2"
  },
  "type": "module",
  "dependencies": {
    "@glidejs/glide": "^3.5.2",
    "date-fns": "^2.28.0",
    "in-view": "^0.6.1",
    "lodash-es": "^4.17.21",
    "marked": "^4.0.13",
    "slugify": "^1.6.5"
  }
}
