{
  "name": "krb-svelte",
  "version": "3.8.0",
  "scripts": {
    "dev": "svelte-kit dev --host",
    "build": "svelte-kit build",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "check-updates": "ncu",
    "update": "ncu -u"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 80,
    "htmlWhitespaceSensitivity": "ignore"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "svelte3"
    ],
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ],
    "settings": {
      "svelte3/missing-declaration": "off"
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "browser": true,
      "es2017": true,
      "node": true
    }
  },
  "devDependencies": {
    "@originjs/vite-plugin-content": "^1.0.1",
    "@sveltejs/adapter-static": "^1.0.0-next.34",
    "@sveltejs/kit": "^1.0.0-next.355",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "npm-check-updates": "^15.3.4",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "sass": "^1.53.0",
    "svelte": "^3.49.0",
    "svelte-preprocess": "^4.10.7",
    "sveltekit-autoimport": "^1.6.8"
  },
  "type": "module",
  "dependencies": {
    "@glidejs/glide": "^3.5.2",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "in-view": "^0.6.1",
    "lodash-es": "^4.17.21",
    "opening_hours": "^3.8.0"
  }
}
