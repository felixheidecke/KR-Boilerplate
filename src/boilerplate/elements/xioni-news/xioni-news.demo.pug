extends ../../demo/_template

block title
    | XIONI-News

block style
    style.
        #preview {
            max-width:960px;
            margin: 0 auto;
        }

block example
    section(data-xioni="news.1383")
        //- ÜBERSICHT
        div(v-if='!details')
            article(v-for="item in items")
                h2(v-text="item.title")
                .h-margin-negative-top.h-font-italic.h-font-small
                    time(:datetime="dateFormat(item.date, 'L')") Am {{ dateFormat(item.date) }}
                    span , von {{ item.author }}
                .pure-g.pure-padded-children
                    .pure-u-1.pure-u-md-1-3(v-if="item.image")
                        figure
                            img.pure-img(:src="urlBase + item.image")
                            figcaption(v-if="item.imageDescription", v-text="item.imageDescription")

                    .pure-u-1(:class="{ 'pure-u-md-2-3' : item.image }")
                        div(v-html="textile(item.text)")
                        p
                            a.h-font-small(@click="goTo(item.id)", :title="item.title") … mehr zu {{ item.title }}

        //- DETAILS
        article(v-else)
            h2(v-text="details.title")
            .pure-g.pure-padded-children.h-margin-negative-bottom
                .pure-u-1(:class="{ 'pure-u-md-2-3' : details.image }", v-html="textile(details.text)")
                .pure-u-1.pure-u-md-1-3(v-if="details.image")
                    figure
                        img.pure-img(:src="urlBase + details.image")
                        figcaption(v-if="details.imageDescription", v-text="details.imageDescription")

            .pure-g.pure-padded-children(v-for="paragraph in details.paragraphs")
                figure.pure-u-1(v-if="paragraph.image", :class="{ 'pure-u-md-1-4' : paragraph.text }")
                    img(:alt="paragraph.imageDescription", :src="urlBase + paragraph.image")
                    figcaption(v-if="paragraph.imageDescription", v-text="paragraph.imageDescription")

                .pure-u-1(v-if="paragraph.text", v-html="textile(paragraph.text)", :class="{ 'pure-u-md-3-4' : paragraph.image }")

            p(v-if="details.pdf")
                i.fa.fa-lg.fa-file-pdf-o(aria-hidden="true")
                    a(:href="urlBase + details.pdf", target="_blank", v-text="details.pdfTitle")

